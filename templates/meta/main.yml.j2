---
galaxy_info:
  author: https://github.com/tehtbl
  role_name: {{ role.name }}
  description: {{ role.desc }}
  license: MIT License
  company: None
  min_ansible_version: 2.8

  platforms:
    - name: Debian
      versions:
        - buster
        - sid
    - name: Ubuntu
      versions:
        - xenial
        - bionic

  galaxy_tags:
    {% for t in tags %}
    - {{ t }}
    {% endfor %}
    - client
    - server
    - system
    - debian
    - ubuntu
    - linux

dependencies:
  {% for r in role.reqs %}
  - {{ r }}
  {% endfor %}